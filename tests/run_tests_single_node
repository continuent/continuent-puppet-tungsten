#!/bin/bash
#

#docker images | grep '<none>' | awk '{print $3}'|xargs docker rmi &> /dev/null
WORKGIT=$1
BUILDDIR=$2
RPMLOC=$3
OS_LIST='centos5 centos6 ubuntu.12.04 ubuntu.14.04 wheezy oracle6'

if [ -n "$4" ]
then
  OS_LIST=$4
fi
mkdir logs > /dev/null
rm logs/*
mkdir logs2 > /dev/null
rm logs2/*

chmod +x get_modules
chmod +x run_tests_single_node_os
./get_modules $BUILDDIR $WORKGIT $RPMLOC



RC=0
for os in $OS_LIST
do

  if [ -n "$4" ]
  then
      #If a single os is selected don't spool output to a file
      ./run_tests_single_node_os $os $BUILDDIR
  else
      ./run_tests_single_node_os $os $BUILDDIR &> logs2/$os.log &
  fi
done

wait

for os in $OS_LIST
do
  echo '-------------------------------------------------------------------------------------'
  echo
  cat logs2/$os.log
  echo
done

if [ -f logs/errors_exist ]
then
  echo 'ERROR: errors exist in log files'
  exit 2
else
  exit 0
fi

#Cleanup oracle files
rm -rf $BUILDDIR/puppet/oracle/* 2> /dev/null
